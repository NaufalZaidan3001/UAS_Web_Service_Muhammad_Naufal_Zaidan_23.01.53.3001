<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Redirect to api/index.php for /api/ routes
    RewriteRule ^api/(.*)$ api/index.php?route=$1 [QSA,L]
    
    # Remove .php extension untuk file biasa
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^([^\.]+)$ $1.php [NC,L]
    
    # Prevent direct access to folders
    RewriteRule ^(api|css|js|images)(/|$) - [L]
</IfModule>

# Security Headers
<Files "config.php">
    Order Allow,Deny
    Deny from all
</Files>
